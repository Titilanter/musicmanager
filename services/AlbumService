using System.Net.Http;
using System.Net.Http.Json;
using MusicManager.Data.ORM;

namespace MusicManager.Services
{
    public class AlbumService
    {
        private readonly HttpClient _httpClient;

        public AlbumService(HttpClient httpClient)
        {
            _httpClient = httpClient;
        }

        public async Task<List<Album>> GetAlbumsAsync()
        {
            return await _httpClient.GetFromJsonAsync<List<Album>>("https://localhost:5279/api/albums");
        }

        public async Task AddAlbumAsync(Album album)
        {
            await _httpClient.PostAsJsonAsync("https://localhost:5279/api/albums", album);
        }
    }
}